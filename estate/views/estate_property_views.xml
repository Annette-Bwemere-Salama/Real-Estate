<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search __validate__="1">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From"/>
                <separator/>
                <field name="postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>
    <record id="estate_property_tree_form" model="ir.ui.view">
        <field name="name">estate.property.form.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="property_type_id"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <group>
                                <field name="postcode"/>
                            </group>
                            <group>
                                <field name="date_availability"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                                <group>
                                    <field name="bedrooms"/>
                                </group>
                                <group>
                                    <field name="living_area"/>
                                </group>
                                <group>
                                    <field name="facades"/>
                                </group>
                                <group id="price">
                                    <field name="price"/>
                                </group>
                                <group id="garage">
                                    <field name="garage"/>
                                </group>
                                <group id="garden">
                                    <field name="garden"/>
                                </group>
                                <group id="garden_area">
                                    <field name="garden_area"/>
                                </group>
                                <group id="garden_orientation">
                                    <field name="garden_orientation"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offers_ids">
                                    <tree>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Infos">
                                <group>
                                    <field name="salesperson_id"/>
                                </group>
                                <group>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">estate.property.tree.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From"/>
                <field name="tag_ids" widget="many2many_tags"/>

            </tree>
        </field>
    </record>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>